import { useState } from 'react';
import { MessageCircle, X, Minimize2, Maximize2, Send, Sparkles } from 'lucide-react';
import { useNavigate } from 'react-router-dom';

interface Message {
  role: 'user' | 'assistant';
  content: string;
  suggestions?: string[];
  results?: SearchResult[];
}

interface SearchResult {
  type: 'flight' | 'stay' | 'experience';
  title: string;
  price: number;
  image: string;
  link: string;
  dealBadge?: string;
}

export function FloatingDia() {
  const [isOpen, setIsOpen] = useState(false);
  const [isMinimized, setIsMinimized] = useState(false);
  const [messages, setMessages] = useState<Message[]>([
    {
      role: 'assistant',
      content: "Hi! I'm Dia, your AI travel assistant for Africa. Where would you like to explore?",
      suggestions: [
        "Best beaches in Kenya",
        "Budget safari in Tanzania",
        "Cultural tours in Ghana",
        "Hotels in Nairobi under $100"
      ]
    }
  ]);
  const [input, setInput] = useState('');
  const [isTyping, setIsTyping] = useState(false);
  const navigate = useNavigate();

  // Simulated AI responses (replace with actual API)
  const getAIResponse = async (query: string): Promise<Message> => {
    setIsTyping(true);
    
    // Simulate processing delay
    await new Promise(resolve => setTimeout(resolve, 1500));
    
    const lowerQuery = query.toLowerCase();
    
    // Smart routing based on query
    if (lowerQuery.includes('flight') || lowerQuery.includes('fly')) {
      return {
        role: 'assistant',
        content: "I found some great flight options for you! Here are the best deals:",
        results: [
          {
            type: 'flight',
            title: 'Nairobi to Mombasa',
            price: 89,
            image: 'âœˆï¸',
            link: '/flights/results',
            dealBadge: 'Great Deal!'
          },
          {
            type: 'flight',
            title: 'Lagos to Accra',
            price: 156,
            image: 'âœˆï¸',
            link: '/flights/results'
          }
        ],
        suggestions: ['Show me the cheapest option', 'Filter by direct flights only', 'What about next week?']
      };
    }
    
    if (lowerQuery.includes('hotel') || lowerQuery.includes('stay') || lowerQuery.includes('accommodation')) {
      return {
        role: 'assistant',
        content: "I've found some amazing places to stay! Check these out:",
        results: [
          {
            type: 'stay',
            title: 'Beachfront Resort - Zanzibar',
            price: 120,
            image: 'ðŸ–ï¸',
            link: '/stays/results',
            dealBadge: '35% Off'
          },
          {
            type: 'stay',
            title: 'Safari Lodge - Masai Mara',
            price: 180,
            image: 'ðŸ•ï¸',
            link: '/stays/results',
            dealBadge: 'Top Rated'
          }
        ],
        suggestions: ['Show me luxury options', 'What about budget hotels?', 'Filter by pool access']
      };
    }
    
    if (lowerQuery.includes('safari') || lowerQuery.includes('tour') || lowerQuery.includes('experience')) {
      return {
        role: 'assistant',
        content: "Perfect! Here are the most popular safari experiences:",
        results: [
          {
            type: 'experience',
            title: '3-Day Masai Mara Safari',
            price: 450,
            image: 'ðŸ¦',
            link: '/experiences/results',
            dealBadge: 'Bestseller'
          },
          {
            type: 'experience',
            title: 'Serengeti Migration Tour',
            price: 890,
            image: 'ðŸ˜',
            link: '/experiences/results',
            dealBadge: 'Limited Spots'
          }
        ],
        suggestions: ['Show me budget safaris', 'What includes accommodation?', 'Best time to visit?']
      };
    }
    
    // Default response
    return {
      role: 'assistant',
      content: `I can help you with that! ${query.includes('?') ? "Here's what I found:" : "Let me search for the best options."}`,
      suggestions: [
        'Show me flights',
        'Find hotels',
        'Recommend experiences',
        'Plan my entire trip'
      ]
    };
  };

  const handleSend = async () => {
    if (!input.trim()) return;
    
    const userMessage: Message = { role: 'user', content: input };
    setMessages(prev => [...prev, userMessage]);
    setInput('');
    
    const aiResponse = await getAIResponse(input);
    setIsTyping(false);
    setMessages(prev => [...prev, aiResponse]);
  };

  const handleSuggestionClick = (suggestion: string) => {
    setInput(suggestion);
  };

  const handleResultClick = (link: string) => {
    navigate(link);
    setIsOpen(false);
  };

  if (!isOpen) {
    return (
      <button
        onClick={() => setIsOpen(true)}
        className="fixed bottom-6 right-6 w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full shadow-2xl flex items-center justify-center hover:scale-110 transition-transform z-50 group"
      >
        <MessageCircle className="w-8 h-8 text-white" />
        <div className="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white animate-pulse" />
        
        {/* Tooltip */}
        <div className="absolute bottom-full right-0 mb-2 px-4 py-2 bg-gray-900 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
          Ask Dia anything!
        </div>
      </button>
    );
  }

  return (
    <div className={`fixed ${isMinimized ? 'bottom-6 right-6 w-80' : 'inset-4 md:bottom-6 md:right-6 md:top-auto md:left-auto md:w-[500px]'} bg-white rounded-2xl shadow-2xl z-50 flex flex-col transition-all duration-300`}>
      {/* Header */}
      <div className="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4 rounded-t-2xl flex items-center justify-between">
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
            <Sparkles className="w-5 h-5 text-white" />
          </div>
          <div>
            <h3 className="font-bold text-white">Dia</h3>
            <p className="text-xs text-white/80">AI Travel Assistant</p>
          </div>
        </div>
        <div className="flex items-center gap-2">
          <button
            onClick={() => setIsMinimized(!isMinimized)}
            className="p-2 hover:bg-white/20 rounded-lg transition-colors"
          >
            {isMinimized ? <Maximize2 className="w-5 h-5 text-white" /> : <Minimize2 className="w-5 h-5 text-white" />}
          </button>
          <button
            onClick={() => setIsOpen(false)}
            className="p-2 hover:bg-white/20 rounded-lg transition-colors"
          >
            <X className="w-5 h-5 text-white" />
          </button>
        </div>
      </div>

      {!isMinimized && (
        <>
          {/* Messages */}
          <div className="flex-1 overflow-y-auto p-6 space-y-4 max-h-[500px]">
            {messages.map((message, index) => (
              <div key={index} className="space-y-3">
                {/* Message Bubble */}
                <div className={`flex ${message.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                  <div className={`max-w-[80%] px-4 py-3 rounded-2xl ${
                    message.role === 'user' 
                      ? 'bg-purple-600 text-white' 
                      : 'bg-gray-100 text-gray-900'
                  }`}>
                    {message.content}
                  </div>
                </div>

                {/* Search Results */}
                {message.results && message.results.length > 0 && (
                  <div className="space-y-2">
                    {message.results.map((result, idx) => (
                      <button
                        key={idx}
                        onClick={() => handleResultClick(result.link)}
                        className="w-full p-4 bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl border-2 border-blue-200 hover:border-purple-400 transition-all text-left group"
                      >
                        <div className="flex items-start gap-3">
                          <div className="text-3xl">{result.image}</div>
                          <div className="flex-1">
                            <div className="flex items-start justify-between gap-2">
                              <h4 className="font-bold text-gray-900 group-hover:text-purple-600 transition-colors">
                                {result.title}
                              </h4>
                              {result.dealBadge && (
                                <span className="px-2 py-1 bg-orange-500 text-white text-xs font-bold rounded-full whitespace-nowrap">
                                  {result.dealBadge}
                                </span>
                              )}
                            </div>
                            <p className="text-2xl font-bold text-purple-600 mt-1">
                              ${result.price}
                            </p>
                          </div>
                        </div>
                      </button>
                    ))}
                  </div>
                )}

                {/* Suggestions */}
                {message.suggestions && message.suggestions.length > 0 && (
                  <div className="flex flex-wrap gap-2">
                    {message.suggestions.map((suggestion, idx) => (
                      <button
                        key={idx}
                        onClick={() => handleSuggestionClick(suggestion)}
                        className="px-4 py-2 bg-white border-2 border-purple-200 rounded-full text-sm font-semibold text-purple-600 hover:bg-purple-50 hover:border-purple-400 transition-all"
                      >
                        {suggestion}
                      </button>
                    ))}
                  </div>
                )}
              </div>
            ))}

            {isTyping && (
              <div className="flex justify-start">
                <div className="bg-gray-100 px-6 py-3 rounded-2xl">
                  <div className="flex gap-1">
                    <div className="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style={{ animationDelay: '0ms' }} />
                    <div className="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style={{ animationDelay: '150ms' }} />
                    <div className="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style={{ animationDelay: '300ms' }} />
                  </div>
                </div>
              </div>
            )}
          </div>

          {/* Input */}
          <div className="p-4 border-t">
            <div className="flex gap-2">
              <input
                type="text"
                value={input}
                onChange={(e) => setInput(e.target.value)}
                onKeyPress={(e) => e.key === 'Enter' && handleSend()}
                placeholder="Ask me anything about African travel..."
                className="flex-1 px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-purple-500 outline-none"
              />
              <button
                onClick={handleSend}
                disabled={!input.trim()}
                className="px-6 py-3 bg-purple-600 text-white rounded-xl font-semibold hover:bg-purple-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              >
                <Send className="w-5 h-5" />
              </button>
            </div>
          </div>
        </>
      )}
    </div>
  );
}
