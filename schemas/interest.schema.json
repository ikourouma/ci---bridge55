{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bridge55.co/schemas/interest.schema.json",
  "title": "Interest",
  "description": "Schema for Interest/Category entities in Bridge55 platform",
  "type": "object",
  "required": ["id", "name", "description", "icon", "image"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^int-[a-z0-9-]+$",
      "description": "Unique interest ID"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "description": "Interest name"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "maxLength": 500,
      "description": "Interest description"
    },
    "icon": {
      "type": "string",
      "description": "FontAwesome icon class"
    },
    "image": {
      "type": "string",
      "description": "Hero image URL"
    },
    "color": {
      "type": "string",
      "pattern": "^#[0-9A-Fa-f]{6}$",
      "description": "Theme color"
    },
    "highlights": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Key highlights"
    },
    "experienceCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of experiences in this category"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "featured": {
      "type": "boolean",
      "description": "Whether featured on homepage"
    }
  }
}

